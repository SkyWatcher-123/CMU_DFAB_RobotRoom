<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find abb_resources)/urdf/common_materials.xacro"/>

  <xacro:macro name="abb_irb4400_45_196" params="prefix:=''
  add_eef:= ${add_eef_xacro}
  eef_filename:= ${eef_filename_xacro}
  tcp_offset_xyz:= ${tcp_offset_xyz_xacro}
  tcp_offset_rpy:= ${tcp_offset_rpy_xacro}
  add_sensor_mount:= ${add_sensor_mount_xacro}
  sensor_mount_filename:= ${sensor_mount_filename_xacro}
  sensor_mount_offset_xyz:= ${sensor_mount_offset_xyz_xacro}
  sensor_mount_offset_rpy:= ${sensor_mount_offset_rpy_xacro}
  ">
    <!-- link list -->
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/visual/base_link.stl"/>
        </geometry>
        <xacro:material_abb_orange />
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/collision/base_link.stl"/>
        </geometry>
        <xacro:material_abb_yellow />
      </collision>
    </link>
    <link name="${prefix}link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/visual/link_1.stl"/>
        </geometry>
        <xacro:material_abb_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/collision/link_1.stl"/>
        </geometry>
        <xacro:material_abb_yellow />
      </collision>
    </link>
    <link name="${prefix}link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/visual/link_2.stl"/>
        </geometry>
        <xacro:material_abb_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/collision/link_2.stl"/>
        </geometry>
        <xacro:material_abb_yellow />
      </collision>
    </link>
    <link name="${prefix}link_3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/visual/link_3.stl"/>
        </geometry>
        <xacro:material_abb_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/collision/link_3.stl"/>
        </geometry>
        <xacro:material_abb_yellow />
      </collision>
    </link>
    <link name="${prefix}link_4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/visual/link_4.stl"/>
        </geometry>
        <xacro:material_abb_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/collision/link_4.stl"/>
        </geometry>
        <xacro:material_abb_yellow />
      </collision>
    </link>
    <link name="${prefix}link_5">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/visual/link_5.stl"/>
        </geometry>
        <xacro:material_abb_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/collision/link_5.stl"/>
        </geometry>
        <xacro:material_abb_yellow />
      </collision>
    </link>
    <link name="${prefix}link_6">
      <visual>
        <origin xyz="-0.14 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/visual/link_6.stl"/>
        </geometry>
        <xacro:material_abb_black />
      </visual>
      <collision>
        <origin xyz="-0.14 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://abb_irb4400_45_support/meshes/irb4400_45_196/collision/link_6.stl"/>
        </geometry>
        <xacro:material_abb_yellow />
      </collision>
    </link>
    <!-- <link name="${prefix}tool0"/> -->
    <!-- end of link list -->

    <!-- ROS base_link to ABB World Coordinates transform -->
    <link name="${prefix}base" />
    <joint name="${prefix}base_link-base" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base"/>
    </joint>

    <!-- joint list -->
    <joint name="${prefix}joint_1" type="revolute">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_1"/>
      <axis xyz="0 0 1"/>
      <limit effort="0" lower="-2.87979" upper="2.87979" velocity="2.618"/>
    </joint>
    <joint name="${prefix}joint_2" type="revolute">
      <origin xyz="0.2 0 0.68" rpy="0 0 0"/>
      <parent link="${prefix}link_1"/>
      <child link="${prefix}link_2"/>
      <axis xyz="0 1 0"/>
      <limit effort="0" lower="-1.2217" upper="1.658" velocity="2.0944"/>
      </joint>
    <joint name="${prefix}joint_3" type="revolute">
      <origin xyz="0 0 0.89" rpy="0 0 0"/>
      <parent link="${prefix}link_2"/>
      <child link="${prefix}link_3"/>
      <axis xyz="0 1 0"/>
      <limit effort="0" lower="-1.0472" upper="1.1345" velocity="2.0944"/>
    </joint>
    <joint name="${prefix}joint_4" type="revolute">
      <origin xyz="0.88 0 0.15" rpy="0 0 0"/>
      <parent link="${prefix}link_3"/>
      <child link="${prefix}link_4"/>
      <axis xyz="1 0 0"/>
      <limit effort="0" lower="-3.49" upper="3.49" velocity="3.927"/>
    </joint>
    <joint name="${prefix}joint_5" type="revolute">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_4"/>
      <child link="${prefix}link_5"/>
      <axis xyz="0 1 0"/>
      <limit effort="0" lower="-2.0944" upper="2.0944" velocity="4.3633"/>
    </joint>
    <joint name="${prefix}joint_6" type="revolute">
      <origin xyz="0.14 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_5"/>
      <child link="${prefix}link_6"/>
      <axis xyz="1 0 0"/>
      <limit effort="0" lower="-6.9813" upper="6.9813" velocity="5.7596"/>
    </joint>
    <!-- <joint name="${prefix}joint_6-tool0" type="fixed">
      <parent link="${prefix}link_6"/>
      <child link="${prefix}tool0"/>
      <origin xyz="0.14 0 0" rpy="0 0 0"/>
    </joint> -->
    <link name="${prefix}tool0_rt1"/>
      <joint type="fixed" name="${prefix}joint_tool0_rotate1">
        <parent link="${prefix}link_6"/>
        <child link="${prefix}tool0_rt1"/>
        <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
    </joint>
    <!-- end of joint list -->

          <!-- add optional end effector -->

    <xacro:if value="${add_eef}">

      <link name="${prefix}tool0_mount">
      <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://abb_irb6640_support/meshes/irb6640_185_280/endEffector/${eef_filename}"/>
          </geometry>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://abb_irb6640_support/meshes/irb6640_185_280/endEffector/${eef_filename}"/>
          </geometry>
        </collision>
      </link>

        <joint type="fixed" name="${prefix}joint_tool0_rotate2">
          <parent link="${prefix}tool0_rt1"/>
          <child link="${prefix}tool0_mount"/>
          <origin xyz="0 0 0" rpy="0 0 ${pi*4/6}"/>
      </joint>

      <link name="${prefix}tool0">
      </link>

      <joint type="fixed" name="${prefix}joint_6-tool0">
        <parent link="${prefix}tool0_mount"/>
        <child link="${prefix}tool0"/>
        <origin xyz="${tcp_offset_xyz}" rpy="${tcp_offset_rpy}"/>
      </joint>
    </xacro:if>

    <xacro:unless value="${add_eef}">

      <link name="${prefix}tool0_mount"/>
      <joint type="fixed" name="${prefix}joint_tool0_rotate2">
        <parent link="${prefix}tool0_rt1"/>
        <child link="${prefix}tool0_mount"/>
        <origin xyz="0 0 0" rpy="0 0 ${pi*4/6}"/>
      </joint>
      <link name="${prefix}tool0"/>
      <joint type="fixed" name="${prefix}joint_6-tool0">
        <parent link="${prefix}tool0_mount"/>
        <child link="${prefix}tool0"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </joint>
      
    </xacro:unless>

    <!-- add optional sensor_mount -->

    <xacro:if value="${add_sensor_mount}">
      <link name="${prefix}sensor_mount">
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://abb_irb6640_support/meshes/irb6640_185_280/sensor/${sensor_mount_filename}"/>
          </geometry>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://abb_irb6640_support/meshes/irb6640_185_280/sensor/${sensor_mount_filename}"/>
          </geometry>
        </collision>
      </link>
      <joint type="fixed" name="${prefix}joint_sensor_mount">
        <parent link="${prefix}tool0_mount"/>
        <child link="${prefix}sensor_mount"/>
        <origin xyz="${sensor_mount_offset_xyz}" rpy="${sensor_mount_offset_rpy}"/>
      </joint>
    </xacro:if>

    <xacro:unless value="${add_sensor_mount}">
      <link name="${prefix}sensor_mount"/>
      <joint type="fixed" name="${prefix}joint_sensor_mount">
        <parent link="${prefix}tool0"/>
        <child link="${prefix}sensor_mount"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </joint>
    </xacro:unless>

    
  </xacro:macro>
</robot>
